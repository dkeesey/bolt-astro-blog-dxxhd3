---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import Experience from '../components/Experience.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`CV - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="bg-background py-24 sm:py-32">
				<div class="mx-auto max-w-7xl px-6 lg:px-8">
					<div class="mx-auto max-w-2xl lg:text-center mb-16">
						<h2 class="text-base font-semibold leading-7 text-secondary">Curriculum Vitae</h2>
						<p class="mt-2 text-3xl font-bold tracking-tight text-primary font-montserrat sm:text-4xl">Professional Experience</p>
						<p class="mt-6 text-lg leading-8 text-text font-hind">
							Senior UI Developer and Front-End Engineer with extensive experience in performance optimization, component library development, and cloud architecture.
						</p>
					</div>
					<Experience />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>