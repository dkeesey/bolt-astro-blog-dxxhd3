<section class="py-24 bg-background">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:text-center">
      <h2 class="text-base font-semibold leading-7 text-secondary">Technologies</h2>
      <p class="mt-2 text-3xl font-bold tracking-tight text-primary font-montserrat sm:text-4xl">
        Technical Expertise
      </p>
      <p class="mt-6 text-lg leading-8 text-text font-hind">
        Leveraging modern technologies to build scalable, performant solutions that drive business value.
      </p>
    </div>
    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <div class="grid grid-cols-2 gap-x-8 gap-y-10 text-center lg:grid-cols-5">
        {technologies.map((tech) => (
          <div class="group relative">
            <div class="flex items-center justify-center">
              <div class="h-16 w-16 text-secondary transition-colors duration-200 group-hover:text-primary" set:html={tech.icon} />
            </div>
            <h3 class="mt-4 text-sm font-semibold text-primary">{tech.name}</h3>
            <p class="mt-1 text-sm text-text">{tech.category}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>